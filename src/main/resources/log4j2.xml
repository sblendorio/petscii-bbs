<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="LogToFile" fileName="/tmp/a.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS zzz} %p %c{1} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="eu.sblendorio.bbs.tenants.petscii.ChatGptPetscii" level="debug" additivity="false">
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Logger name="eu.sblendorio.bbs.tenants.petscii.ChatGptAscii" level="debug" additivity="false">
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Root level="all">
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuration>
