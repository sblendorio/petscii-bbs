<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="ChatGptLog" fileName="${sys:user.home}/bbs-chatgpt.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS zzz} %p %c{1} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="eu.sblendorio.bbs.tenants.petscii.ChatGptPetscii" level="debug" additivity="false">
            <AppenderRef ref="ChatGptLog"/>
        </Logger>
        <Logger name="eu.sblendorio.bbs.tenants.petscii.ChatGptAscii" level="debug" additivity="false">
            <AppenderRef ref="ChatGptLog"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>
